<div>
  <div>
    <h1>
      Water post #<%= @the_water_post.id %> details
    </h1>

    <div>
      <div>
        <a href="/water_posts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_water_post/<%= @the_water_post.id %>">
          Delete water post
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Date
      </dt>
      <dd>
        <%= @the_water_post.date %>
      </dd>

      <dt>
        Ounce count
      </dt>
      <dd>
        <%= @the_water_post.ounce_count %>
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_water_post.caption %>
      </dd>

      <dt>
        Post author
      </dt>
      <dd>
        <%= @the_water_post.post_author_id %>
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_water_post.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_water_post.comments_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_water_post.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_water_post.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit water post
    </h2>

    <form action="/modify_water_post/<%= @the_water_post.id %>"  method="post" >
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date" value="<%= @the_water_post.date %>">
      </div>

      <div>
        <label for="ounce_count_box">
          Ounce count
        </label>

        <input type="text" id="ounce_count_box" name="query_ounce_count" value="<%= @the_water_post.ounce_count %>">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" value="<%= @the_water_post.caption %>">
      </div>

      <div>
        <label for="post_author_id_box">
          Post author
        </label>

        <input type="text" id="post_author_id_box" name="query_post_author_id" value="<%= @the_water_post.post_author_id %>">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count" value="<%= @the_water_post.likes_count %>">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count" value="<%= @the_water_post.comments_count %>">
      </div>

      <button>
        Update water post
      </button>
    </form>
  </div>
</div>

<hr>
