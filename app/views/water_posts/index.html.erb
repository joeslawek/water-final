

<div>
  <div>
    <h1>
     <p style="color: light-blue "> All Water Posts </p> 
    </h1>
  </div>
</div>

<hr>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add a new water post
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">      Add a new water post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
    <form action="/insert_water_post" method="post">
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="ounce_count_box">
          Ounce count
        </label>

        <input type="text" id="ounce_count_box" name="query_ounce_count">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption">
      </div>

      <%# <div>
        <label for="post_author_id_box">
          Post author
        </label>

        <input type="text" id="post_author_id_box" name="query_post_author_id">
      </div> %>

      <%# <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div> %>

      <button>
        Create water post
      </button>
    </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>









<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Ounce count
        </th>

        <th>
          Caption
        </th>

        <th>
          Author User #
        </th>

        

      
        <th>
          Last Modified
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_water_posts.each do |a_water_post| %>
      <tr>
        <td>
          <%= a_water_post.id %>
        </td>

        <td>
          <%= a_water_post.date %>
        </td>

        <td>
          <%= a_water_post.ounce_count %>
        </td>

        <td>
          <%= a_water_post.caption %>
        </td>

        <td>
       

          <a href="users/<%= a_water_post.post_author_id %>">
  <%= a_water_post.post_author_id %>
</a>

        
        <td>
          <%= time_ago_in_words(a_water_post.updated_at) %> ago
        </td>

        <td>
          <a href="/water_posts/<%= a_water_post.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
